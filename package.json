{
  "name": "estoque-express",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "dev": "npm run services:up && npm run wait-for-postgres && nodemon app.js",
    "node:test": "node app.js",
    "wait-for-postgres": "node ./src/infra/scripts/wait-for-postgres.js",
    "test": "npm run services:up && npm run wait-for-postgres && concurrently -n node,vitest --hide node --kill-others --success command-\"vitest --run\" \"node app.js\" \"vitest --run\"",
    "test:watch": "vitest",
    "services:up": "docker compose -f ./src/infra/compose.yaml up -d",
    "services:stop": "docker compose -f ./src/infra/compose.yaml stop",
    "services:down": "docker compose -f ./src/infra/compose.yaml down",
    "prepare": "husky",
    "lint:eslint:check": "eslint .",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "async-retry": "^1.3.3",
    "dotenv": "^17.2.3",
    "dotenv-expand": "^12.0.3",
    "express": "^5.2.1",
    "husky": "^9.1.7",
    "node-pg-migrate": "^8.0.3",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.39.1",
    "commitlint": "^20.1.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "vitest": "^4.0.15"
  },
  "overrides": {
    "glob": "^11.1.0"
  }
}
